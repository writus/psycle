{% extends 'psycle.layout.twig' %}

{% block content %}

    <div class="grid grid-pad"><div class="pagination col-1-1">
        {% if prevPage %}
        <a href="/all/{{ prevPage }}">newer</a>
        {% endif %}
        {% if nextPage %}
        <a href="/all/{{ nextPage }}">older</a>
        {% endif %}
    
        {{ page_title ? '<h1>' ~ page_title ~ '</h1>' }}
        <hr style="border-color:#eee">
    </div></div>
    {% for post in posts %}
        <article class="grid grid-pad">
            <div class="col-3-12">
                <ul class="meta">
                    <li class="date"><span class="d">{{ post.date|date('d') }}</span> <span class="m">{{ post.date|date('M') }}</span> <span class="y">{{ post.date|date('Y') }}</span></li>
                    {% for category in post.categories %}
                    <li class="category">
                        <a href="/{{ category.url }}">{{ category.name }}</a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-9-12 post">
                <h2><a href="/{{ post.url }}">{{ post.title }}</a></h2>
                <div class="content">
                    {{ post.body }}
                </div>  
                <div class="article_footer">
                    <span class="tags">{{ post.tags|join(', ') }}</span>
                </div>
            </div>

        </article>
    <div class="grid grid-pad">
        <div class="pagination col-1-1">
            <hr style="border-color:#eee">
        </div>
    </div>
        
    {% endfor %}
    <div class="grid grid-pad"><div class="pagination col-1-1">
        {% if prevPage %}
        <a href="/all/{{ prevPage }}">newer</a>
        {% endif %}
        {% if nextPage %}
        <a href="/all/{{ nextPage }}">older</a>
        {% endif %}
    
        {{ page_title ? '<h1>' ~ page_title ~ '</h1>' }}
    </div></div>

{% endblock %}